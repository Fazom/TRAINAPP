<Page x:Class="TrainApp.AllWindows.LK"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrainApp.AllWindows"
     mc:Ignorable="d" 
      d:DesignHeight="3000" d:DesignWidth="1540" 
      Title="LK">

    <Grid Margin="0" Background="#353647" >
        <ScrollViewer Margin  ="0,0,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,100,0,0">
                <Border x:Name="Train1" Visibility="Collapsed" Margin="80,100,80,10" CornerRadius="50" Background="White" Padding="0" Height="400" >
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20"  Color="LightGray" ShadowDepth="0.1"/>
                    </Border.Effect>
                    <Grid>
                        <TextBlock Text="Бицепс" HorizontalAlignment="Right" Margin ="0,27,659,306" FontSize="40" Width="330" FontFamily="Century Gothic"/>
                        <Button x:Name="But_1"  Content="Просмотр" Margin="1075,328,85,0" Height="32" VerticalAlignment="Top" Click="But_1_Click"  />
                        <Image Margin="60,40,1000,40" Height="320" Width="320" Source="/Image/biceps.jpg" Stretch="UniformToFill" />
                        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Margin ="391,99,0,0" FontSize="20" Width="645" FontFamily="Century Gothic" VerticalAlignment="Top" Height="261" TextAlignment="Justify"><Run Text="Программа строится на разных упражнениях, которые условно можно разделить на 3 типа: "/><LineBreak/><Run/><Run Text="Основные базовые. За счёт этих упражнений строится основная мышечная масса рук, т.к. они являются тяжёлыми и многосуставными. "/><LineBreak/><Run Text="Проработка отстающих мышц. При обычных подтягиваниях или отжиманиях, не все мышцы рук работают одинаково. "/><LineBreak/><Run Text="Пампинг. Он понадобится нам для того, чтобы «добить» мышцы до отказа, насытить их максимально кровью и питательными веществами вместе с кислородом."/></TextBlock>
                    </Grid>
                </Border>


            </StackPanel>

        </ScrollViewer>


        <Border Background="White" Padding="0"  Height="100" Width="1540" VerticalAlignment="Top" >
            <Border.Effect>
                <DropShadowEffect BlurRadius="30"  Color="Black" ShadowDepth="0.3"/>
            </Border.Effect>
            <Grid>
                <TextBlock Text="Ваши тренировки "  FontSize="40" Width="800" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Century Gothic" TextAlignment="Center" />
                <Image x:Name="avatar" VerticalAlignment="Center" Width="65" Height="64" Source="/AllWindows/user.png" Stretch="UniformToFill" HorizontalAlignment="Left" Margin="1400,0,0,0" />
                <Button x:Name="Browse" Content="Измените аватарку" Margin="1175,0,180,0" Height="28" VerticalAlignment="Center" Click="Browse_Click" />
                <Button x:Name="Home" Margin="95,0,1375,0" Height="70" Width="70" VerticalAlignment="Center" Click="GoHome" >
                    <Image Height="40" Width="40" Source="/AllWindows/free-icon-home-1946488.png" Stretch="UniformToFill" HorizontalAlignment="Center" />
                </Button>
            </Grid>


        </Border>

    </Grid>
</Page>
